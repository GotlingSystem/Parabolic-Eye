{%- macro ctype(item) -%}
{%- if item['type'] == 'int' %}int{% elif item['type'] == 'boolean' %}bool{% elif item['type'] == 'string' %}char*{%-endif -%}
{%- endmacro -%}

{%- macro cname(item) -%}
{{item['name']|replace("-","_")|replace(" ","_")|replace("/","_")|replace(".","_")}}
{%- endmacro %}

{%- macro coolstring(str) -%}
{{str|replace("-","_")|replace(" ","_")|replace("/","_")|replace(".","_")}}
{%- endmacro %}